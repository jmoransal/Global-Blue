<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="res_config_view_form_inherit_pos_iot_globalblue_free_tax" model="ir.ui.view">
		<field name="name">res.config.form.inherit.pos.iot</field>
		<field name="model">res.config.settings</field>
		<field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
		<field name="arch" type="xml">
			<div id="o_settings_use_payment_terminals" position="after">
				<h2>Global Blue Free Tax</h2>
				<div class="row mt16 o_settings_container" id="o_settings_use_globalblue_free_tax">
					<div class="col-12 col-lg-6 o_setting_box" id="domain_setting">
						<div class="o_setting_right_pane">
							<label for="api_url" string="API URL"/>
							<div class="content-group">
								<div class="row mt16">
									<field name="api_url"/>
								</div>
							</div>
						</div>
						<div class="o_setting_right_pane">
							<label for="api_user" string="API Username"/>
							<div class="content-group">
								<div class="row mt16">
									<field name="api_user"/>
								</div>
							</div>
						</div>
						<div class="o_setting_right_pane">
							<label for="api_pass" string="API Password"/>
							<div class="content-group">
								<div class="row mt16">
									<field name="api_pass"/>
								</div>
							</div>
						</div>
						<div class="o_setting_right_pane">
							<label for="ic2_integra_url" string="IC2 Integra Url"/>
							<div class="content-group">
								<div class="row mt16">
									<field name="ic2_integra_url"/>
								</div>
							</div>
						</div>
						<div class="o_setting_right_pane">
							<label for="dev_mode" string="Test mode"/>
							<div class="content-group">
								<div class="row mt16">
									<field name="dev_mode"/>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</field>
	</record>
</odoo>


